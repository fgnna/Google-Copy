<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_item_head"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="10dp"
                android:src="@drawable/head_bg"/>
            <TextView android:id="@+id/home_item_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_toRightOf="@id/home_item_head"
                      android:text="江南"
                      android:textStyle="bold"/>

            <ImageView
                android:id="@+id/home_item_arrowimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/home_item_name"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:layout_toRightOf="@id/home_item_arrowimg"
                      android:text="公开"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="3dp"
                      android:layout_marginTop="15dp"
                      android:text="2天"/>
        </RelativeLayout>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/home_item_title"
                  android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
                  android:maxLines="1"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="match_parent"
                   android:layout_height="300dp"
                   android:id="@+id/home_item_contentimg"
                   android:scaleType="centerCrop"
                   android:src="@drawable/bg"/>
        <RelativeLayout android:layout_width="match_parent"

                        android:layout_height="40dp">

            <!-- 点赞 -->
            <RelativeLayout android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:id="@+id/home_item_plus"
                            android:layout_marginTop="5dp"

                            android:gravity="center_horizontal">
                <ImageButton android:id="@+id/home_item_plus_imgbtn"
                             android:layout_width="30dp"

                             android:layout_height="30dp"
                             android:background="@drawable/circle_shape"
                             android:src="@drawable/quantum_ic_plus_one_white_24"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="3dp"
                          android:layout_marginTop="8dp"
                          android:layout_toRightOf="@id/home_item_plus_imgbtn"
                          android:text="53"
                          android:id="@+id/home_item_plus_text"
                          android:textColor="#a8a8a8"
                          android:textSize="12dp"/>
            </RelativeLayout>

            <!-- 分享 -->
            <RelativeLayout android:layout_width="60dp"
                            android:id="@+id/home_item_share"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_horizontal">
                <ImageButton android:id="@+id/home_item_share_imgbtn"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:scaleType="fitXY"
                             android:background="@drawable/circle_shape"
                             android:src="@drawable/quantum_ic_share_white_24"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="3dp"
                          android:layout_marginTop="8dp"
                          android:layout_toRightOf="@id/home_item_share_imgbtn"
                          android:text="52"
                          android:id="@+id/home_item_shre_text"
                          android:textColor="#a8a8a8"
                          android:textSize="12dp"/>
            </RelativeLayout>

            <!-- 评论 -->
            <RelativeLayout android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_toLeftOf="@id/home_item_share"
                            android:layout_marginTop="5dp"

                            android:gravity="center_horizontal">
                <ImageButton android:id="@+id/home_item_comment_imgbtn"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:scaleType="fitXY"
                             android:background="@drawable/circle_shape"
                             android:src="@drawable/quantum_ic_comment_white_24"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/home_item_comment_text"
                          android:layout_marginLeft="3dp"
                          android:layout_marginTop="8dp"
                          android:layout_toRightOf="@id/home_item_comment_imgbtn"
                          android:text="50"
                          android:textColor="#a8a8a8"
                          android:textSize="12dp"/>
            </RelativeLayout>
        </RelativeLayout>


        />
    </LinearLayout>

</android.support.v7.widget.CardView>