<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/first_detail_head"
        android:layout_width="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bg"
        android:layout_height="26dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/first_detail_head"
        android:layout_width="60dp"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:id="@+id/first_detail_name"
        android:text="user name"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="1天"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/first_detail_comment"
        android:textSize="12dp"
        android:layout_marginLeft="45dp"
        android:text="我是评论"
        android:layout_below="@id/first_detail_name"
        android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginTop="2dp"
          android:background="?android:attr/listDivider"
          android:layout_below="@id/first_detail_comment"
          />


</RelativeLayout>
