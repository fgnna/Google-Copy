<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">
      <FrameLayout android:layout_width="match_parent"
                   android:id="@+id/m_home_framelayout"
                   android:layout_height="match_parent">

      </FrameLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:layout_gravity="bottom|end"
                      android:background="#262626"
                      android:orientation="horizontal">

            <RelativeLayout android:id="@+id/m_home_firstpager"

                            style="@style/home_buttom">
                <ImageView android:id="@+id/firstpager_img"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_home_white_24dp"/>
                <TextView
                    style="@style/home_buttom_text"
                    android:layout_below="@id/firstpager_img"
                    android:text="首页"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_collection"
                            style="@style/home_buttom">
                <ImageView android:id="@+id/collection_img"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_bookmark_white_24dp"/>

                <TextView
                    style="@style/home_buttom_text"
                    android:layout_below="@id/collection_img"
                    android:text="收藏集"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_work"
                            style="@style/home_buttom">>
                <ImageView android:id="@+id/work_img"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_group_work_white_24dp"/>
                <TextView
                    style="@style/home_buttom_text"
                    android:layout_below="@id/work_img"
                    android:text="社群"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_notifications"
                            style="@style/home_buttom">

                <ImageView android:id="@+id/notifications_img"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_notifications_white_24dp"/>

                <TextView
                    style="@style/home_buttom_text"
                    android:layout_below="@id/notifications_img"
                    android:text="通知"/>
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>





    <LinearLayout android:id="@+id/m_home_drawleft"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="start"
                  android:background="#ffffff"
                  android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/head_bg">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/m_home_drawleft_head"
                    android:layout_width="56dp"
                    android:layout_height="86dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"/>


                <TextView android:id="@+id/m_home_drawleft_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/m_home_drawleft_head"
                          android:layout_marginLeft="16dp"
                          android:layout_marginTop="8dp"
                          android:text="user"
                          android:textColor="#ffffff"
                          android:textSize="12dp"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/m_home_drawleft_name"
                          android:layout_marginLeft="16dp"
                          android:text="user@gmail.com"
                          android:textColor="#ffffff"
                          android:textSize="10dp"/>

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout android:id="@+id/m_home_drawleft_personaldata"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_personaldata_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_account_circle_black_24dp"/>
                <TextView
                    style="@style/home_drawlayout_text"
                    android:layout_toRightOf="@id/m_home_drawleft_personaldata_img"
                    android:text="个人资料"/>
            </RelativeLayout>


            <RelativeLayout android:id="@+id/m_home_drawleft_connection"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_connection_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_supervisor_account_black_24dp"/>
                <TextView style="@style/home_drawlayout_text"
                          android:layout_toRightOf="@id/m_home_drawleft_connection_img"
                          android:text="人脉"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_drawleft_location"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_location_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_my_location_black_24dp"/>
                <TextView style="@style/home_drawlayout_text"
                          android:layout_toRightOf="@id/m_home_drawleft_location_img"
                          android:text="位置信息"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_drawleft_activity"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"

                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_activity_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_event_black_24dp"/>
                <TextView style="@style/home_drawlayout_text"
                          android:layout_toRightOf="@id/m_home_drawleft_activity_img"
                          android:text="活动"/>

            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_drawleft_setting"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_setting_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_settings_black_24dp"/>
                <TextView style="@style/home_drawlayout_text"
                          android:layout_toRightOf="@id/m_home_drawleft_setting_img"
                          android:text="设置"/>

            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_drawleft_send"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_send_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_announcement_black_24dp"/>
                <TextView style="@style/home_drawlayout_text"
                          android:layout_toRightOf="@id/m_home_drawleft_send_img"
                          android:text="发送反馈"/>

            </RelativeLayout>

            <RelativeLayout android:id="@+id/m_home_drawleft_help"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">
                <ImageView android:id="@+id/m_home_drawleft_help_img"
                           style="@style/home_drawlayout_item_img"
                           android:src="@drawable/ic_help_black_24dp"/>
                <TextView style="@style/home_drawlayout_text"
                          android:layout_toRightOf="@id/m_home_drawleft_help_img"
                          android:text="帮助"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
